<h1> Compose </h1>

<form action="/compose" method="post"> 
    <div class="form-group">
        <label> Title </label>
        <input type="text" class="form-control" name="userInput"> 
    </div>
    <div class="form-group">
        <label> Post </label>
        <textarea class="form-control" name="submission" rows="4" cols="50"></textarea>
    </div>
    <div class="form-check">
        <button type="submit" class="btn btn-primary name="button"> Publish </button>
    </div> 
</form>


